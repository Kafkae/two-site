// Clear the float on any element.
clearfix()
	&:after
		display table
		clear both
		content ''

// Fix no working `-webkit-text-size-adjust: 100%;` in Android.
fix-text-size-adjust()
	background-image linear-gradient(transparent, transparent)

// Set element size
size($width, $height = $width)
	width $width
	height $height

// Set margin on left & right
margin-x($margin)
	margin-left $margin
	margin-right $margin

// Set margin on top & bottom
margin-y($margin)
	margin-top $margin
	margin-bottom $margin

// Set pading on left & right
padding-x($padding)
	padding-left $padding
	padding-right $padding

// Set padding on top & bottom
padding-y($padding)
	padding-top $padding
	padding-bottom $padding

// Set one static retina image
retinaBackground($image, $ext = 'png') {
	background-image url('../images/' + $image + '.' + $ext)

	@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
		background-image url('../images/' + $image + '@2x.' + $ext)
	}
}

effect-btn()
	display inline-block
	text-transform uppercase
	background-color accent
	color #ffffff
	text-decoration none
	box-shadow 0 0 0 0 transparent
	transition all 0.2s ease-in
	position relative

	&:hover
		color #ffffff
		box-shadow 0 0 15px 0 accent

		&::before
			animation button 2.5s  infinite
			animation-fill-mode backwards

	&:active 
		box-shadow 0 0 15px 0 accent 
		transition box-shadow .5s ease-in
		transform scale(1.1)

	&::before
		content ''
		display block
		width 0px
		height 86%
		position absolute
		top 7%
		left 0% 
		opacity 0
		background white
		box-shadow 0 0 15px 3px white
		transform scaleX(30deg)

		@keyframes button 
			from
				opacity 0
				left 0%
			50%
				opacity 1
			to
				opacity 0
				left 100%

effect-icn()
	&:hover
		transform scale(1.5)
		transition-duration .5s
	
	&:active
		transform scale(1.8)
		transition-duration .3s

heading()
	color accent
	text-transform uppercase
	font-weight bold
	font-size 1.2em