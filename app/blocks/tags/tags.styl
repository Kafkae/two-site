.tags
	width 100%
	display flex
	flex-direction column
	justify-content space-around
	align-items center
	height 238px
	min-height 238px
	border 2px solid #000
	margin-bottom 35px

	&__title
		heading()

	&__items
		display block
		width 80%
		height 65%
		text-align center

	&__item
		display inline-block

	&__show
		effect-btn()
		border-radius 30px
		padding-x 11px
		padding-y 8px
		font-size .9em
		font-family sfont
		font-weight bold
		margin 4px