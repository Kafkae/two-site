.header
    height 90vh
    width 100%
    background url('../images/background.png')
    background-repeat no-repeat
    background-position center top
    background-size cover
    display flex
    flex-direction row

    &__wrapper
        background-color rgba(193, 194, 197, .80)
        width 100%
        height 84px
        display flex

    &__content
        width 1149px
        margin 0 auto
        display flex 
        align-items center
        max-width 1700px
        height 100%
    
    &__hg-group
        display flex
        flex-basis 100px
        flex-grow 1


@media screen and (max-width 840px)
    .header__hg-group
        display none

@media screen and (max-width 840px)
    .header

        .header__hg-group_mobile
            display flex
            justify-content center
            position absolute
            width 100%
            top 374px
            background-color rgba(193, 194, 197, .80)
