.search-button
	display flex
  
	&__btn-search
		background none
		border none 
		display flex

		&:hover
			transform rotate(360deg)
			transition-duration .5s
		&:active
			transform rotate(-360deg) scale(1.3)
			transition-duration 1s


	&__search-popup
		display none
		position fixed
		top 0
		right 0
		left 0
		bottom 0
		z-index 100

	&__search-bg
		position absolute
		top 0
		right 0
		left 0
		bottom 0
		background-color rgba(0, 0, 0, .5)

	&__search-form
		display block
		width 100%
		position relative
		right -100%
		border none

	&__field-form
		position relative
		z-index 100

	&__field
		margin-top 84px
		outline none 
		width 100%
		height 55px
		background-color #A2A3A7
		border 2px solid black
		outline none
		font-size 1.5em
		text-align center

	&__field::placeholder
		font-size 1em
		color black
