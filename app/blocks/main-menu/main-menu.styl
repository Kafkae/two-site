.main-menu
	list-style none
	text-decoration none
	font-size 1.2em 
	flex-basis 440px
	flex-grow 3

	&__default
		opacity .3

	&__wrap
		display flex
		list-style none
		flex-wrap nowrap

	&__item
		padding-top 13px
		padding-bottom 13px

	&__link
		color col-font
		text-decoration none
		padding 10px
		white-space nowrap
		position relative


		&_hover::after
			position absolute
			content ''
			transition all 300ms ease-in-out
			width 100%
			height 2px
			bottom 3px
			background-color #333
			left 0
			transform scale(0)

		&:hover::after
			transform scaleX(.7)



@media screen and (max-width 840px)
	.main-menu
		display none

			
@media screen and (max-width 840px)
	.main-menu_mobile
		list-style none
		text-decoration none
		font-size 1.7em 
		flex-basis 500px
		flex-grow 3
		position absolute
		top 84px
		background-color rgba(193, 194, 197, .80)
		width 100%
		display flex

		.main-menu__wrap_mobile
			display flex
			list-style none
			flex-wrap nowrap
			flex-direction column
			align-items center
			width 100%

		.main-menu__link_mobile
			padding-top 13px
			padding-bottom 13px
			margin-bottom 220px
			padding-left 50px
			padding-right 50px


		.main-menu__item_mobile
			margin-bottom 5px