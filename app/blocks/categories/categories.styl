.categories
	width 100%
	display flex
	flex-direction column
	justify-content space-around
	align-items center
	height 260px
	min-height 260px
	border 2px solid #000
	margin-bottom 35px

	&__title
		heading()
		margin-bottom -30px
	
	&__list
		display flex
		justify-content space-between
		flex-direction column
		height 130px
		min-height 130px
		text-align center
		margin-bottom 10px

	&__link
		color #000
		text-decoration none
		text-transform uppercase
		align-items center
		align-content center
		font-size 1.2em
		position relative
		font-family sfont

		&_hover::after
			position absolute
			content ''
			transition all 300ms ease-in-out
			width 100%
			height 1px
			bottom -2px
			background-color #333
			left 0
			transform scale(0)

		&:hover::after
			transform scaleX(1)

@media screen and (max-width 1161px)
	.categories
		width 30%
		font-size 1.7em
		height 360px
		min-height 360px
		align-self center

		&__list
			height 170px
			min-height 170px
			margin-bottom 15px

@media screen and (max-width 736px)
	.categories
		width 100%