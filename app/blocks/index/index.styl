.index
	width 100%
	max-width 1200px
	height 100%
	padding-top 60px
	display flex 
	margin 0 auto


	&__wrapper-left
		height auto
		flex-basis 757px
		margin-right 7%

	&__wrapper-right
		flex-basis 344px
		height 100%
		background-color #e7e7e7
		margin-left 20px
		height auto


@media screen and (max-width 1166px)
	.index
		flex-wrap wrap

		&__wrapper-left
			margin 0 auto
			flex-basis 100%

		&__wrapper-right
			margin 0 auto
			flex-basis 100%
			