.burger
	margin-left auto
	cursor pointer
	padding 20px

	&__line
		position relative

		&,
		&::before,
		&::after
			display block
			width 20px
			height 3px
			background-color #212121


		&::before,
		&::after
			position absolute
			content ''

		&::before
			top -8px

		&::after
			top 8px

					
					
.burger__line_active
	background-color transparent
	transition-duration .3s

	&::before
		transform translateY(8px) rotate(45deg)
		transition-duration .3s

	&::after
		transform translateY(-8px) rotate(-45deg)


@media screen and (min-width 840px)
	.burger
		display none