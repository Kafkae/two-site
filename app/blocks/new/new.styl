.new
	background-size cover
	background-repeat no-repeat
	background-position center bottom
	width 100%
	height 500px
	position relative
	text-transform uppercase
	color #ffffff
	font-size .9em
	margin-bottom 59px


	&__wrapper
		margin 0 auto
		height 200px
		margin-bottom 55px
		text-align center
		width 75%
		margin-top 235px


	&__group-info
		letter-spacing normal

	&__type
		color #ffffff
		text-decoration none
		padding-right 7px


		&:hover
			opacity .7
			transition-duration .5s

		
	&__name
		font-size 1.8em
		text-align center
		padding-top 18px

	&__description
		text-transform none
		font-size 1em
		line-height 22px
		padding-top 18px
		text-align center

	&__read-more
		display block
		text-decoration none 
		background rgba(255, 255, 255, .3)
		color #ffffff
		padding 11px
		white-space nowrap
		border-radius 20px
		font-family sfont
		font-weight bold
		font-size 1em
		width 135px
		margin 0 auto
		margin-top 30px

		&:hover
			box-shadow inset -143px -188px 300px 62px rgba(0,0,0, .37)
			
		&:active
			transform scale(1.2)
			transition-duration .5s









	&__categories
		padding-x 27px
		padding-y 5px
		border 2px solid #ffffff
		top 22px
		left 20px
		border-radius 15px
		effect-btn()

@media screen and (max-width 601px)
	.new

		&__wrapper
			width 90%
			margin-top 170px
	