.subscribe
	width 100%
	display flex
	flex-direction column
	justify-content space-around
	border 2px solid #000
	margin-bottom 35px
	min-height 278px
	text-align center
	align-items center

	&__title
		heading()

	&__description
		width 70%
		line-height 1.5

	&__mail
		display flex
		flex-direction column
		justify-content space-between
		height 100px

	&__field
		width 280px
		padding-y 10px
		border none 
		border-radius 30px
		text-align: center

		&:focus
			box-shadow 0 0 25px 0 accent 
			transition box-shadow .5s ease-in
			transform scale(1.1)

		&::placeholder
			text-transform uppercase

	&__confirm
		border none
		padding-y 10px
		border-radius 30px
		font-family mfont
		font-weight bold
		effect-btn()

@media screen and (max-width 1161px)
	.subscribe
		width 40%

@media screen and (max-width 736px)
	.subscribe
		width 100%
		font-size 1.2em

@media screen and (max-width 344px)
	.subscribe
		width 100%
		font-size 1.2em