.gallery
	display flex
	width 100%
	flex-wrap wrap
	max-width 1200px
	margin 0 auto
	margin-top 70px


	&__title
		
		&_hidden
			position absolute
			clip rect(0 0 0 0)
			width 1px
			height 1px
			margin -1px
	
	&__wrap
		flex auto
		width 170px
		height 170px
		position relative

	&__image
		width 100%
		height 100%

	
	